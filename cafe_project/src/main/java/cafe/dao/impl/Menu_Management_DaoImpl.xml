<?xml version="1.0" encoding="UTF-8"?>

<!-- 마이바티스 3 매퍼 DOCTYPE -->
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cafe.dao.face.Menu_Management_Dao">
	<insert id="category_insert" parameterType="cafe.dto.Cafe_menu_category">
		insert into cafe_menu_category values(menu_category_no_seq.nextval, 1, #{menu_category_name}, 1, #{menu_category_img_origin_name}, #{menu_category_img_stored_name}, #{menu_category_explanation})
	</insert>
	
	<select id="category_selectAll" resultType="cafe.dto.Cafe_menu_category">
		select * from Cafe_menu_category order by menu_category_no
	</select>
	
	<select id="category_select" parameterType="int" resultType="cafe.dto.Cafe_menu_category">
		select * from Cafe_menu_category where menu_category_no=#{category_no}
	</select>
	
	<update id="category_update" parameterType="cafe.dto.Cafe_menu_category">
		update cafe_menu_category set
    		menu_category_name = #{menu_category_name},
    		menu_category_img_origin_name = #{menu_category_img_origin_name},
    		menu_category_img_stored_name = #{menu_category_img_stored_name},
    		menu_category_explanation = #{menu_category_explanation}
	where menu_category_no=#{menu_category_no}
	</update>
	
	<delete id="categoey_delete" parameterType="cafe.dto.Cafe_menu_category">
		delete from cafe_menu_category where menu_category_no=#{menu_category_no}
	</delete>
	
	
	<insert id="menu_insert" parameterType="cafe.dto.Cafe_business_menu">
		insert into Cafe_business_menu values(menu_no_seq.nextval, 1, #{menu_name}, #{menu_price}, #{menu_category_no}, #{menu_explanation}, #{menu_temperature}, #{menu_image_origin_name}, #{menu_image_stored_name})
	</insert>
	
	<select id="menu_selectAll" resultType="cafe.dto.Cafe_business_menu">
		select M.*, c.menu_category_name from cafe_business_menu M,
(select menu_category_no,menu_category_name from cafe_menu_category) C where m.menu_category_no=c.menu_category_no
	</select>

</mapper>